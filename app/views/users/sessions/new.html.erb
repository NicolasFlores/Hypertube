<h1 class="title_h3 center">Sign in</h1>

<div class="contain_log">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),  :html => {class: "col s8 offset-s2"}) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", required: true %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <br>
    <div class="actions">
      <%= f.submit "Log in", class: "center sbtn btn-large waves-effect indigo" %>
    </div>
  <% end %>
    <br>

<%= render "devise/shared/links" %>

